#!/bin/bash
set -e

. script/functions

options="--rm"
echo $@ | grep '\--no-cache' &> /dev/null && options="$options --no-cache" || :

info "Build images."
smitty docker build $options -t docker-vault .

info "Show image sizes."
docker images | egrep '^vault\b' | sort

echo
echo "WARN: you should docker tag the alphavault image."
echo
