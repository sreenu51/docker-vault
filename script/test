#!/bin/bash
set -e

echo "Step1: Test for vault server install"
docker run -t -i sometheycallme/vaultalpha help | grep Usage:

echo "Step2: Initialize Vault and look for key creation"
docker run -t -i sometheycallme/vaultalpha server | grep started
#docker run -t -i sometheycallme/vaultalpha "server -config=vaultconfig.hcl" | grep Error 
